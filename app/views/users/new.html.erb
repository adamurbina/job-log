<h1>New Account Signup</h1>

<% if flash[:notice] %>
  <h3><%= flash[:notice] %></h3>
<% end %>

<%= form_for(@user) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br></br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br></br>
  <%= f.submit %>
<% end %>
