<h1>Log in</h1>

<% if flash[:notice] %>
  <%= flash[:notice] %>
  <br></br>
<% end %>

<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br></br>
  <%= f.submit "Log in" %>

<% end %>

<p>New User? <%= link_to("Sign Up", new_user_url) %></p>
